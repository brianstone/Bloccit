<h1>New Summary</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Summaries:</p>
    <ul>
      <li>Nothing monosyllabiac.</li>
      <li>Make it anecdotal.</li>
      <li>Fun.</li>
    </ul>
  </div>

  <div class="col-md-8">
    <%= form_for [@post, @summary] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder: "Enter summary here." %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
  <% end %>
  </div>
</div>
