<div class="media">
  <%= link_to user, class: 'media-left' do %>
    <%= image_tag(user.avatar.small.url, width: 30, height: 30, class: "media-object") %>
    <% end %>
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to user.name, user %>
      </h4>
      <small>
        <%= pluralize(user.posts_count, 'post') %>
        <%= pluralize(user.comments_count, 'comment') %>
      </small>
    </div>
</div>